# Frontend Environment Variables Template
# Copy this to .env.local for development or .env.production for production

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_min_32_characters_here

# Database (for Next.js API routes)
MONGODB_URI=mongodb://localhost:27017/equators
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# OAuth Providers
# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Hugging Face Integration
HUGGINGFACE_API_URL=https://huggingface.co/api

# Backend API URL (if using standalone backend)
NEXT_PUBLIC_API_URL=http://localhost:5000

# Environment
NODE_ENV=development
