# Production Environment Variables
# IMPORTANT: Copy this file to .env.production and fill in real values

# Database - Get from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/equators-production

# NextAuth - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=your-super-secure-secret-key-that-is-at-least-32-characters-long
NEXTAUTH_URL=https://equators.tech

# GitHub OAuth - Get from GitHub Developer Settings
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional Configuration
ADMIN_EMAIL=admin@equators.tech
RATE_LIMIT_ENABLED=true
TRUST_PROXY=true
COOKIE_PREFIX=eqs_
DEBUG=false
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
