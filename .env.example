# Base URL for the application
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# NextAuth Secret for token encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# JWT Secret for token encryption (can be the same as NEXTAUTH_SECRET)
JWT_SECRET=your_jwt_secret_here

# JWT Expiration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# OAuth Providers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Hugging Face API (optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Electron Protocol Registration
ELECTRON_PROTOCOLS=equatorschatbot,equatorsbrowser,equatorsaiplayground

# Environment
NODE_ENV=development
API_BASE_URL=http://localhost:3000
